<div class="form-group">
    <div class="form-group-header">
      <label for="example-text">Example Text</label>
    </div>
    <div class="form-group-body">
      <input class="form-control" type="text" value="Example Value" id="example-text" />
    </div>
</div>

@code {
    /// <summary>
    /// Options
    /// </summary>
    /// <value></value>
    [Parameter]
    public AppNodeOptions? Options { get; set; }

    private string? Content()
    {
        string? value = Options?.GetOption("Content");
        if (string.IsNullOrEmpty(value))
            return "'Content' not set";
        return value;
    }
}
