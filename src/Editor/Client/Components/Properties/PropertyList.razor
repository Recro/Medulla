<div class="Box width-full" style="overflow-y: scroll;
                                       height: 94vh;">
    <h1 class="pl-1">@PropertyMenuStructure?.Nameable.Title</h1>

    @if (PropertyMenuStructure is { PropertyMenuStructureNodes: {} })
    {
        @foreach (var item in PropertyMenuStructure.PropertyMenuStructureNodes)
        {
            <PropertyListItem PropertiesMenu="PropertiesMenu" PropertyMenuStructureNode="item" />
        }
    }
</div>

@code {

    /// <summary>
    /// The menu structure to be rendered.
    /// </summary>
    [Parameter]
    public PropertyMenuStructure? PropertyMenuStructure { get; set; }

    /// <summary>
    /// Provide a reference to the parent PropertiesMenu component so that child component can call ShouldRender.
    /// </summary>
    [Parameter]
    public PropertiesMenu? PropertiesMenu { get; set; }

}
