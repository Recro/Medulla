<div class="flex flex-col Box">
    
    <div class="color-bg-tertiary p-10 pb-2 pt-2 pl-1" style="display:flex;justify-content: space-between;align-content: center;align-items: center;">
        <h3>@WindowTitle</h3>
        @if (WindowOpen)
        {
            <div @onclick="() => WindowOpen = !WindowOpen" style="width:20px;margin-right:10px;padding-top: 5px;">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
            </div>    
        }
        else
        {
            <div @onclick="() => WindowOpen = !WindowOpen" style="width:20px;margin-right:10px;padding-top: 5px;">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
                </svg>
            </div>
        }
    </div>
    @if (WindowOpen)
    {
        <div class="color-bg-primary">
            <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                    <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                        @ChildContent
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@code {
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    
    [Parameter]
    public string WindowTitle { get; set; } = "{}";

    
    public bool WindowOpen { get; set; } = true;

}