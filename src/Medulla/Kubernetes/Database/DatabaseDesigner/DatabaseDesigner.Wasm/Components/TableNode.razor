<div data-color-mode="dark" class="border rounded-0 p-2 mb-2 color-bg-default box card @(Node.Selected ? "selected" : "")" style="width: 320px;">
    <div class="box-header card-header">

        <nav aria-label="Breadcrumb">
            <ol>
                <li class="breadcrumb-item">
                <a href="https://github.com/business">Database</a>
                </li>
                <li class="breadcrumb-item breadcrumb-item-selected">
                <a href="https://github.com/business/customers/mailchimp" aria-current="page">@Node.Name</a>
                </li>
            </ol>
        </nav>
    </div>
    <ul style="list-style-type: none" class="box-body list-group list-group-flush">
        @foreach (var column in Node.Columns.OrderByDescending(c => c.Primary))
        {
            <li class="box-row">
                 <div class="flash">
                    <TableColumn @key="column" Table="Node" Column="column"></TableColumn>
                </div>
            </li>
        }
    </ul>

    @if (Node.HasPrimaryColumn)
    {
        <PortRenderer Port="Node.GetPort(PortAlignment.Right)"></PortRenderer>
    }
</div>