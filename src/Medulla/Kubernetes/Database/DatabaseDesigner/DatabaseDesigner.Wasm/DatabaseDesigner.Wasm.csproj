      <Watch Include="**\*.js;**\*.css;**\*.cs;**\*.razor;**\*.html" />
    </ItemGroup>
  </Target>
  
  <ItemGroup>
    <ProjectReference Include="..\DatabaseDesigner.Core\DatabaseDesigner.Core.csproj" />
